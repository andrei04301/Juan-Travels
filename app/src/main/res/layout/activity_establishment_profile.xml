<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:elevation="3dp"
    tools:context=".EstablishmentProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:background="@drawable/top_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/estProfilePic"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/black"
                        android:src="@drawable/food" />

                    <EditText
                        android:id="@+id/editEstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Establishment Name"
                        android:enabled="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:background="@null"
                        app:layout_constraintEnd_toEndOf="@+id/estProfilePic"
                        app:layout_constraintStart_toStartOf="@+id/estProfilePic"
                        app:layout_constraintTop_toBottomOf="@+id/estProfilePic" />

                    <EditText
                        android:id="@+id/editEstType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type of Establishment"
                        android:background="@null"
                        android:enabled="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/editEstName"
                        app:layout_constraintStart_toStartOf="@+id/editEstName"
                        app:layout_constraintTop_toBottomOf="@+id/editEstName" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="380dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/white_background"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editEstType">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtEstContact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Contact Number"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>

                            <EditText
                                android:id="@+id/editEstContact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:layout_weight="1"
                                android:background="@null"
                                android:text="0905 248 0413"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textAlignment="viewEnd"
                                />
                        </LinearLayout>
                        <View
                            android:id="@+id/view0"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#D9D9D9"
                            android:layout_margin="10dp">

                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtEstRegion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Region"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>

                            <EditText
                                android:id="@+id/editEstRegion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:layout_weight="1"
                                android:text="Region 1"
                                android:background="@null"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textAlignment="viewEnd"
                                />
                        </LinearLayout>
                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#D9D9D9"
                            android:layout_margin="10dp">

                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtEstCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Province/City"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>

                            <EditText
                                android:id="@+id/editEstCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:layout_weight="1"
                                android:text="NCR/QC"
                                android:background="@null"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textAlignment="viewEnd"
                                />
                        </LinearLayout>
                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#D9D9D9"
                            android:layout_margin="10dp">

                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtBrgy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Barangay"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>

                            <EditText
                                android:id="@+id/editEstBrgy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:layout_weight="1"
                                android:text="Brgy Sangandaan"
                                android:background="@null"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textAlignment="viewEnd"
                                />
                        </LinearLayout>
                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#D9D9D9"
                            android:layout_margin="10dp">

                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtEstLong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Longitude"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>

                            <EditText
                                android:id="@+id/editEstLong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:layout_weight="1"
                                android:text="Longitude"
                                android:background="@null"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textAlignment="viewEnd"
                                />
                        </LinearLayout>
                        <View
                            android:id="@+id/view4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#D9D9D9"
                            android:layout_margin="10dp">

                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtEstLat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Latitude"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>

                            <EditText
                                android:id="@+id/editEstLat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:layout_weight="1"
                                android:text="Latitude"
                                android:background="@null"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textAlignment="viewEnd"
                                />
                        </LinearLayout>

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/est_edit_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/cust_but"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>